{
  "name": "elroi-api",
  "version": "1.0.0",
  "description": "Backend for Elroi system",
  "main": "index.js",
  "scripts": {
    "start": "pm2 start src/ --node-args=\"-r esm\"",
    "stop": "pm2 stop 0",
    "dev": "nodemon -r esm src/",
    "test": "env-cmd --silent -f ./test.env nyc --reporter=html --reporter=text mocha src/**/*.test.js -r esm  --timeout 90000  --recursive --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/team-elroi/elroi-api.git"
  },
  "keywords": [
    "elroi",
    "backend"
  ],
  "author": "Victor Onwukwe",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/team-elroi/elroi-api/issues"
  },
  "homepage": "https://github.com/team-elroi/elroi-api#readme",
  "devDependencies": {
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "mocha": "^8.4.0",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "sinon": "^10.0.0",
    "sinon-chai": "^3.6.0"
  },
  "nyc": {
    "exclude": [
      "src/index.js",
      "src/config/index.js",
      "src/db/*",
      "src/routes/index.js",
      "src/test/*"
    ]
  },
  "engines": {
    "node": "16"
  }
}
